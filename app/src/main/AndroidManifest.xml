<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.bearwithme">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">

        <activity
            android:name=".BearWithMe"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>

        </activity>

        <activity android:name=".BrownBearActivity"
            android:label="@string/brown_bear_activity_label"
            android:parentActivityName=".BearWithMe">
        </activity>

        <activity android:name=".BlackBearActivity"
            android:label="@string/black_bear_activity_label"
            android:parentActivityName=".BearWithMe">
        </activity>

        <activity android:name=".PredictionActivity"
            android:label="@string/prediction_activity_label"
            android:parentActivityName=".BrownBearActivity">
        </activity>

        <activity android:name=".PredictionActivityBlack"
            android:label="@string/prediction_activity_label"
            android:parentActivityName=".BlackBearActivity">
        </activity>

    </application>

</manifest>
